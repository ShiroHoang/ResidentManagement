    </servlet>
    <servlet>
        <servlet-name>NavigationServlet</servlet-name>
        <servlet-class>controller.NavigationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterAccountServlet</servlet-name>
        <servlet-class>controller.RegisterAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationProcessServlet</servlet-name>
